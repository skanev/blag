%h2= link_to @post.title, @post
= markdown @post.content

#leave-comment
  %h2 Остави коментар
  - form_for [@post, @new_comment || Comment.new] do |form|
    - if @new_comment
      %p There was an error in your comment
    = form.label :author, 'Name'
    = form.text_field :author

    = form.label :email, 'E-mail'
    = form.text_field :email

    = form.label :url, 'Site'
    = form.text_field :url

    = form.label :content, 'Comment'
    = form.text_area :content

    = form.submit 'Leave a comment'

- unless @post.comments.empty?
  %h2 Коментари
  %ol#comments
    - @post.comments.each do |comment|
      %li
        %p.author
          - if comment.url.present?
            = link_to h(comment.author), comment.url
          - else
            &= comment.author
        %p.created-at= comment.created_at
        .content= simple_format auto_link(comment.content)